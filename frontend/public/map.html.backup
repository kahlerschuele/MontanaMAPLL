            id: 'counties',
            url: 'http://localhost:8001/data/tiger/counties.geojson',
            lineColor: '#FF00FF',  // Bright magenta - very visible
            lineWidth: 4,
            fillColor: 'rgba(255, 0, 255, 0.1)',
            labelField: 'NAME'
        },
        {
            id: 'tracts',
            url: 'http://localhost:8001/data/tiger/tracts.geojson',
            lineColor: '#FF6B6B',
            lineWidth: 1.5,
            fillColor: 'rgba(255, 107, 107, 0.03)',
            labelField: 'NAME'
        },
        {
            id: 'blockgroups',
            url: 'http://localhost:8001/data/tiger/blockgroups.geojson',
            lineColor: '#4ECDC4',
            lineWidth: 1,
            fillColor: 'rgba(78, 205, 196, 0.02)',
            labelField: 'GEOID'
        },
        {
            id: 'places',
            url: 'http://localhost:8001/data/tiger/places.geojson',
            lineColor: '#F7DC6F',
            lineWidth: 2,
            fillColor: 'rgba(247, 220, 111, 0.05)',
            labelField: 'NAME'
        }
    ];

    for (const layer of tigerLayers) {
        try {
            const response = await fetch(layer.url);
            const data = await response.json();

            // Add source
            map.addSource(`tiger-${layer.id}`, {
                type: 'geojson',
                data: data
            });

            // Set zoom-based visibility and initial state
            let minZoom = 0;
            let maxZoom = 24;
            let initialVisibility = 'none';

            // Zoom-based display strategy
            if (layer.id === 'counties') {
                minZoom = 4;   // Show counties at any reasonable zoom
                maxZoom = 24;  // Always show (never hide)
                initialVisibility = tigerLayersVisible.counties ? 'visible' : 'none';
                console.log(`Setting up counties layer - visibility: ${initialVisibility}`);
            } else if (layer.id === 'tracts') {
                minZoom = 10;  // Show tracts at medium zoom
                maxZoom = 15;
                initialVisibility = 'none';
            } else if (layer.id === 'blockgroups') {
                minZoom = 13;  // Show block groups when very zoomed in
                maxZoom = 18;
                initialVisibility = 'none';
            } else if (layer.id === 'places') {
                minZoom = 8;   // Show cities/towns at medium zoom
                maxZoom = 16;
                initialVisibility = 'none';
            }

            // Add fill layer
            map.addLayer({
                id: `tiger-${layer.id}-fill`,
                type: 'fill',
                source: `tiger-${layer.id}`,
                minzoom: minZoom,
                maxzoom: maxZoom,
                paint: {
                    'fill-color': layer.fillColor,
                    'fill-opacity': 1
                },
                layout: {
                    'visibility': initialVisibility
                }
            });

            // Add line layer
            map.addLayer({
                id: `tiger-${layer.id}-line`,
                type: 'line',
                source: `tiger-${layer.id}`,
                minzoom: minZoom,
                maxzoom: maxZoom,
                paint: {
                    'line-color': layer.lineColor,
                    'line-width': layer.lineWidth,
                    'line-opacity': 0.8
                },
                layout: {
                    'visibility': initialVisibility
                }
            });

            // Add click handler for popup
            map.on('click', `tiger-${layer.id}-fill`, (e) => {
                if (!e.features?.[0]) return;
                const props = e.features[0].properties;

                const html = `
                    <div class="popup-title">${layer.id.toUpperCase()}: ${props[layer.labelField] || 'N/A'}</div>
                    <div class="popup-info">
                        ${props.GEOID ? `<div><strong>GEOID:</strong> ${props.GEOID}</div>` : ''}
                        ${props.STATEFP ? `<div><strong>State FIPS:</strong> ${props.STATEFP}</div>` : ''}
                        ${props.COUNTYFP ? `<div><strong>County FIPS:</strong> ${props.COUNTYFP}</div>` : ''}
                        ${props.ALAND ? `<div><strong>Land Area:</strong> ${(props.ALAND / 2589988.11).toFixed(2)} sq mi</div>` : ''}
                        ${props.AWATER ? `<div><strong>Water Area:</strong> ${(props.AWATER / 2589988.11).toFixed(2)} sq mi</div>` : ''}
                    </div>
                `;

                new maplibregl.Popup({ closeButton: true, maxWidth: '300px' })
                    .setLngLat(e.lngLat)
                    .setHTML(html)
                    .addTo(map);
            });

            console.log(`‚úÖ LOADED TIGER ${layer.id}: ${data.features.length} features (visibility: ${initialVisibility}, zoom: ${minZoom}-${maxZoom})`);
        } catch (error) {
            console.error(`Failed to load TIGER ${layer.id}:`, error);
        }
    }
}

// Toggle TIGER layer visibility
function toggleTIGERLayer(layerId) {
    tigerLayersVisible[layerId] = !tigerLayersVisible[layerId];
    const visibility = tigerLayersVisible[layerId] ? 'visible' : 'none';

    map.setLayoutProperty(`tiger-${layerId}-fill`, 'visibility', visibility);
    map.setLayoutProperty(`tiger-${layerId}-line`, 'visibility', visibility);

    console.log(`TIGER ${layerId}:`, visibility);
}

// Load parcels, waterways, and oil wells when map is ready
map.on('load', () => {
    console.log('Map loaded - Esri World Imagery + Street Labels + Waterways + Water Rights + Oil Wells + AIS Vessels + TIGER Boundaries');
    loadParcelsInView();
    loadWaterways();
    loadOilWells();
    connectAISStream();
    loadTIGERBoundaries();
});

// Reload parcels when user finishes moving the map
map.on('moveend', () => {
    if (map.getZoom() >= 13) {
        loadParcelsInView();
    }
});

// Show message when zoomed out
map.on('zoom', () => {
    const zoom = map.getZoom();
    const loadingEl = document.getElementById('loading');
    if (zoom < 13) {
        loadingEl.textContent = 'Zoom in to see property lines';
        loadingEl.style.display = 'block';
    } else if (loadingEl.textContent !== 'Loading Montana parcels...') {
        loadingEl.style.display = 'none';
    }
});

map.on('error', (e) => {
    console.error('Map error:', e);
});

</script>

</body>
</html>