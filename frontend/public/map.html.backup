// Function to fetch parcels for current view
async function loadParcelsInView() {
    const bounds = map.getBounds();
    const zoom = map.getZoom();

    // Only load parcels when zoomed in enough
    if (zoom < 13) {
        console.log('Zoom in to see parcels (current zoom:', zoom, ')');
        return;
    }

    // Build bbox for ArcGIS envelope: xmin,ymin,xmax,ymax
    const envelope = {
        xmin: bounds.getWest(),
        ymin: bounds.getSouth(),
        xmax: bounds.getEast(),
        ymax: bounds.getNorth(),
        spatialReference: { wkid: 4326 }
    };

    const url = `https://gisservicemt.gov/arcgis/rest/services/MSDI_Framework/Parcels/MapServer/0/query?` +
        `where=1%3D1&` +
        `geometry=${encodeURIComponent(JSON.stringify(envelope))}&` +
        `geometryType=esriGeometryEnvelope&` +
        `spatialRel=esriSpatialRelIntersects&` +
        `outFields=*&` +  // Get ALL fields
        `returnGeometry=true&` +
        `outSR=4326&` +
        `f=geojson&` +
        `resultRecordCount=2000`;

    console.log('Fetching parcels in view...');

    try {
        const response = await fetch(url);
        if (!response.ok) {
            console.error('API error:', response.status);
            return;
        }

        const data = await response.json();
        console.log(`‚úì Loaded ${data.features.length} parcels`);

        if (data.features.length > 0) {
            parcelData = data;

            // Update or add source
            if (map.getSource('mt-parcels')) {
                map.getSource('mt-parcels').setData(parcelData);
            } else {
                map.addSource('mt-parcels', {
                    type: 'geojson',
                    data: parcelData
                });

                // Add parcel layers
                map.addLayer({
                    id: 'parcels-casing',
                    type: 'line',
                    source: 'mt-parcels',
                    paint: {
                        'line-color': '#000',
                        'line-width': ['interpolate', ['linear'], ['zoom'], 13, 1.8, 18, 4.5],
                        'line-opacity': 0.65
                    }
                });

                map.addLayer({
                    id: 'parcels-fill',
                    type: 'fill',
                    source: 'mt-parcels',
                    paint: {
                        'fill-color': 'transparent',
                        'fill-opacity': 0
                    }
                });

                map.addLayer({
                    id: 'parcels-line',
                    type: 'line',
                    source: 'mt-parcels',
                    paint: {
                        'line-color': '#fff',
                        'line-width': ['interpolate', ['linear'], ['zoom'], 13, 1.2, 18, 3],
                        'line-opacity': 1
                    }
                });

                // Double-click handler with detailed property info
                map.on('dblclick', 'parcels-line', (e) => {
                    e.preventDefault(); // Prevent zoom
                    if (!e.features || !e.features[0]) return;
                    showParcelPopup(e.lngLat, e.features[0].properties, e.features[0].geometry);
                });

                // Double-click handler for parcel fill (anywhere on property)
                map.on('dblclick', 'parcels-fill', (e) => {
                    e.preventDefault();
                    if (!e.features || !e.features[0]) return;
                    showParcelPopup(e.lngLat, e.features[0].properties, e.features[0].geometry);
                });

                // Hover cursor
                map.on('mouseenter', 'parcels-line', () => {
                    map.getCanvas().style.cursor = 'pointer';
                });
                map.on('mouseleave', 'parcels-line', () => {
                    map.getCanvas().style.cursor = '';
                });
                map.on('mouseenter', 'parcels-fill', () => {
                    map.getCanvas().style.cursor = 'pointer';
                });
                map.on('mouseleave', 'parcels-fill', () => {
                    map.getCanvas().style.cursor = '';
                });
            }

            document.getElementById('loading').style.display = 'none';
        }
    } catch (error) {
        console.error('Error loading parcels:', error);
    }
}

// Function to load Montana waterways (rivers, streams, lakes)
async function loadWaterways() {
    const bounds = map.getBounds();

    // Build bbox for waterways query
    const bbox = [
        bounds.getWest(),
        bounds.getSouth(),
        bounds.getEast(),
        bounds.getNorth()
