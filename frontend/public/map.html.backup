// AIS Stream vessel tracking
let aisWebSocket = null;
const vesselData = new Map(); // Store vessel positions

function connectAISStream() {
    try {
        aisWebSocket = new WebSocket('ws://localhost:8001/ws/ais');

        aisWebSocket.onopen = () => {
            console.log('Connected to AIS stream');
        };

        aisWebSocket.onmessage = (event) => {
            try {
                const aisMessage = JSON.parse(event.data);

                // Extract vessel position from AIS message
                if (aisMessage.MetaData && aisMessage.MetaData.latitude && aisMessage.MetaData.longitude) {
                    const mmsi = aisMessage.MetaData.MMSI || 'unknown';
                    const lat = aisMessage.MetaData.latitude;
                    const lon = aisMessage.MetaData.longitude;

                    // Store vessel data
                    vesselData.set(mmsi, {
                        type: 'Feature',
                        properties: {
                            mmsi: mmsi,
                            messageType: aisMessage.MessageType,
                            ...aisMessage.Message
                        },
                        geometry: {
                            type: 'Point',
                            coordinates: [lon, lat]
                        }
                    });

                    // Update map layer
                    updateVesselLayer();
                }
            } catch (error) {
                console.error('Error processing AIS message:', error);
            }
        };

        aisWebSocket.onerror = (error) => {
            console.error('AIS WebSocket error:', error);
        };

        aisWebSocket.onclose = () => {
            console.log('AIS WebSocket closed. Reconnecting in 5 seconds...');
            setTimeout(connectAISStream, 5000);
        };
    } catch (error) {
        console.error('Failed to connect to AIS stream:', error);
        setTimeout(connectAISStream, 5000);
    }
}

function updateVesselLayer() {
    if (!map.getSource('vessels')) {
        map.addSource('vessels', {
