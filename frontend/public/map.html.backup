                tiles: ['https://a.basemaps.cartocdn.com/rastertiles/voyager_only_labels/{z}/{x}/{y}.png'],
                tileSize: 256,
                attribution: '¬© CARTO ¬© OpenStreetMap'
            }
        },
        layers: [
            {
                id: 'background',
                type: 'background',
                paint: { 'background-color': '#1a1a1a' }
            },
            {
                id: 'satellite',
                type: 'raster',
                source: 'esri-satellite',
                paint: { 'raster-opacity': 1 }
            },
            {
                id: 'street-labels',
                type: 'raster',
                source: 'carto-labels',
                paint: { 'raster-opacity': 0.8 }
            }
        ]
    },
    center: [-111.043, 45.678], // Bozeman, MT
    zoom: 15,
    minZoom: 3,
    maxZoom: 20,
    doubleClickZoom: false  // Disable default double-click zoom
});

// Add navigation controls
map.addControl(new maplibregl.NavigationControl(), 'top-left');
map.addControl(new maplibregl.ScaleControl(), 'bottom-right');

let parcelData = { type: 'FeatureCollection', features: [] };

// Function to query water rights for a parcel
async function getWaterRightsForParcel(parcelGeometry) {
    try {
        // Convert GeoJSON geometry to ArcGIS format
        let arcgisGeometry;
        if (parcelGeometry.type === 'Polygon') {
            arcgisGeometry = { rings: parcelGeometry.coordinates };
        } else if (parcelGeometry.type === 'MultiPolygon') {
            arcgisGeometry = { rings: parcelGeometry.coordinates.flat(1) };
        } else {
            console.warn('Unsupported geometry type:', parcelGeometry.type);
            return [];
        }

        const geomParam = encodeURIComponent(JSON.stringify(arcgisGeometry));

        // Query both Points of Diversion (Layer 1) and Places of Use (Layer 2)
        const podUrl = `https://gis.dnrc.mt.gov/arcgis/rest/services/WRD/WRQS/FeatureServer/1/query?` +
            `where=1%3D1&` +
            `geometry=${geomParam}&` +
            `geometryType=esriGeometryPolygon&` +
            `inSR=4326&` +
            `spatialRel=esriSpatialRelIntersects&` +
            `outFields=WR_NUMBER,OWNERS,SOURCE_NAME,PURPOSES,ENF_PRTY_DT_CHAR,MAX_FLOW_CFS,MAX_ACRES,WR_STATUS,WR_TYPE&` +
            `returnGeometry=false&` +
            `f=json&` +
            `resultRecordCount=100`;

        const pouUrl = `https://gis.dnrc.mt.gov/arcgis/rest/services/WRD/WRQS/FeatureServer/2/query?` +
            `where=1%3D1&` +
            `geometry=${geomParam}&` +
            `geometryType=esriGeometryPolygon&` +
            `inSR=4326&` +
            `spatialRel=esriSpatialRelIntersects&` +
            `outFields=WR_NUMBER,OWNERS,PURPOSES,ENF_PRTY_DT_CHAR,MAX_FLOW_CFS,MAX_ACRES,WR_STATUS,WR_TYPE,SOURCE_NAME&` +
            `returnGeometry=false&` +
            `f=json&` +
            `resultRecordCount=100`;

        console.log('Querying water rights (POD + POU) for parcel...');

        // Fetch both in parallel
        const [podResponse, pouResponse] = await Promise.all([
            fetch(podUrl),
            fetch(pouUrl)
        ]);

        const podData = await podResponse.json();
        const pouData = await pouResponse.json();

        // Tag sources and merge
        const podFeatures = (podData.features || []).map(f => ({ ...f, source: 'POD' }));
        const pouFeatures = (pouData.features || []).map(f => ({ ...f, source: 'POU' }));
        const allRights = [...podFeatures, ...pouFeatures];

        const uniqueRights = new Map();

        for (const right of allRights) {
            const wrNum = right.attributes.WR_NUMBER;
            if (!uniqueRights.has(wrNum)) {
                uniqueRights.set(wrNum, right);
            } else {
                // Merge data - combine both POD and POU
                const existing = uniqueRights.get(wrNum);

                // Track both sources
                if (existing.source !== right.source) {
                    existing.source = 'POD+POU';
                }

                // Merge missing attributes
                if (!existing.attributes.SOURCE_NAME && right.attributes.SOURCE_NAME) {
                    existing.attributes.SOURCE_NAME = right.attributes.SOURCE_NAME;
                }
                if (!existing.attributes.MAX_FLOW_CFS && right.attributes.MAX_FLOW_CFS) {
                    existing.attributes.MAX_FLOW_CFS = right.attributes.MAX_FLOW_CFS;
                }
            }
        }

        const deduped = Array.from(uniqueRights.values());
        console.log(`Found ${deduped.length} unique water rights (${podData.features?.length || 0} POD + ${pouData.features?.length || 0} POU)`);
        return deduped;
    } catch (error) {
        console.error('Error fetching water rights:', error);
        return [];
    }
}

// Function to query oil/gas wells for a parcel
async function getOilWellsForParcel(parcelGeometry) {
    try {
        // Convert GeoJSON geometry to ArcGIS format
        let arcgisGeometry;
        if (parcelGeometry.type === 'Polygon') {
            arcgisGeometry = { rings: parcelGeometry.coordinates };
        } else if (parcelGeometry.type === 'MultiPolygon') {
            arcgisGeometry = { rings: parcelGeometry.coordinates.flat(1) };
        } else {
            console.warn('Unsupported geometry type:', parcelGeometry.type);
            return [];
        }

        // Use DNRC BOG Wells service with real API numbers
        const url = `https://gis.dnrc.mt.gov/arcgis/rest/services/BOG/DataMiner/MapServer/11/query?` +
            `where=1%3D1&` +
            `geometry=${encodeURIComponent(JSON.stringify(arcgisGeometry))}&` +
            `geometryType=esriGeometryPolygon&` +
            `inSR=4326&` +
            `spatialRel=esriSpatialRelIntersects&` +
            `outFields=API_WellNo,Well_Nm,CoName,Status,Type&` +
            `returnGeometry=false&` +
            `f=json&` +
            `resultRecordCount=50`;

        console.log('Querying oil/gas wells for parcel...');
        const response = await fetch(url);
        const data = await response.json();
        console.log(`Found ${data.features?.length || 0} oil/gas wells`);
        return data.features || [];
    } catch (error) {
        console.error('Error fetching oil/gas wells:', error);
        return [];
    }
}

// Function to show parcel popup with water rights and oil wells
async function showParcelPopup(lngLat, p, geometry) {
    // Query both water rights and oil/gas wells in parallel
    const [waterRights, oilWells] = await Promise.all([
        getWaterRightsForParcel(geometry),
        getOilWellsForParcel(geometry)
    ]);

    // Format owner address
    let ownerAddr = '';
    if (p.OwnerAddress1) ownerAddr += p.OwnerAddress1;
    if (p.OwnerAddress2) ownerAddr += (ownerAddr ? ', ' : '') + p.OwnerAddress2;
    if (p.OwnerCity || p.OwnerState || p.OwnerZipCode) {
        ownerAddr += '<br>' + [p.OwnerCity, p.OwnerState, p.OwnerZipCode].filter(Boolean).join(', ');
    }

    // Property address
    let propAddr = '';
    if (p.AddressLine1) propAddr += p.AddressLine1;
    if (p.AddressLine2) propAddr += (propAddr ? ', ' : '') + p.AddressLine2;
    if (p.CityStateZip) propAddr += '<br>' + p.CityStateZip;

    // Legal description
    let legal = '';
    if (p.LegalDescriptionShort) {
        legal = p.LegalDescriptionShort;
    } else {
        const parts = [];
        if (p.Township) parts.push(`T${p.Township}`);
        if (p.Range) parts.push(`R${p.Range}`);
        if (p.Section) parts.push(`S${p.Section}`);
        legal = parts.join(' ');
    }
    if (p.Subdivision) legal += (legal ? '<br>' : '') + p.Subdivision;
    if (p.CertificateOfSurvey) legal += (legal ? '<br>' : '') + 'COS: ' + p.CertificateOfSurvey;

    // EIA data removed - showing well-specific production data instead

    // Build detailed popup
    const html = `
        <div style="font-family: -apple-system, sans-serif; min-width: 280px; max-width: 420px;">
            <div style="font-weight: 700; font-size: 16px; margin-bottom: 12px; color: #1a1a1a; border-bottom: 2px solid #2563eb; padding-bottom: 8px;">
                ${p.OwnerName || `Parcel ${p.PARCELID || 'N/A'}`}
            </div>

            ${p.OwnerName ? `
            <div style="font-size: 12px; color: #666; margin-bottom: 12px; padding: 8px; background: #f9fafb; border-radius: 4px;">
                <strong>Parcel ID:</strong> ${p.PARCELID || 'N/A'}
            </div>` : ''}

            ${ownerAddr ? `
            <div style="margin-bottom: 12px;">
                <div style="font-size: 11px; color: #666; text-transform: uppercase; font-weight: 600; margin-bottom: 4px;">Owner Address</div>
                <div style="font-size: 12px; color: #555; margin-top: 2px;">${ownerAddr}</div>
            </div>` : ''}

            ${propAddr ? `
            <div style="margin-bottom: 12px;">
                <div style="font-size: 11px; color: #666; text-transform: uppercase; font-weight: 600; margin-bottom: 4px;">Property Address</div>
                <div style="font-size: 12px; color: #1a1a1a;">${propAddr}</div>
            </div>` : ''}

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 12px; margin-bottom: 12px;">
                ${p.GISAcres ? `
                <div>
                    <div style="font-size: 11px; color: #666; text-transform: uppercase; font-weight: 600;">Total Acres</div>
                    <div style="font-size: 14px; color: #1a1a1a; font-weight: 600;">${parseFloat(p.GISAcres).toFixed(2)}</div>
                </div>` : ''}
                ${p.PropType ? `
                <div>
                    <div style="font-size: 11px; color: #666; text-transform: uppercase; font-weight: 600;">Property Type</div>
                    <div style="font-size: 12px; color: #1a1a1a;">${p.PropType}</div>
                </div>` : ''}
            </div>

            ${(p.TotalValue || p.TotalLandValue || p.TotalBuildingValue) ? `
            <div style="margin-bottom: 12px; background: #f3f4f6; padding: 10px; border-radius: 6px;">
                <div style="font-size: 11px; color: #666; text-transform: uppercase; font-weight: 600; margin-bottom: 6px;">Assessment Values (${p.TaxYear || 'N/A'})</div>
                ${p.TotalValue ? `<div style="font-size: 13px; color: #1a1a1a;"><strong>Total:</strong> $${parseInt(p.TotalValue).toLocaleString()}</div>` : ''}
                ${p.TotalLandValue ? `<div style="font-size: 12px; color: #555;">Land: $${parseInt(p.TotalLandValue).toLocaleString()}</div>` : ''}
                ${p.TotalBuildingValue ? `<div style="font-size: 12px; color: #555;">Building: $${parseInt(p.TotalBuildingValue).toLocaleString()}</div>` : ''}
            </div>` : ''}

            ${legal ? `
            <div style="margin-bottom: 12px;">
                <div style="font-size: 11px; color: #666; text-transform: uppercase; font-weight: 600; margin-bottom: 4px;">Legal Description</div>
                <div style="font-size: 11px; color: #1a1a1a; line-height: 1.4;">${legal}</div>
            </div>` : ''}

            ${(p.IrrigatedAcres || p.GrazingAcres || p.ForestAcres) ? `
            <div style="margin-bottom: 12px;">
                <div style="font-size: 11px; color: #666; text-transform: uppercase; font-weight: 600; margin-bottom: 4px;">Land Use Breakdown</div>
                <div style="font-size: 11px; color: #555; line-height: 1.6;">
                    ${p.IrrigatedAcres ? `Irrigated: ${parseFloat(p.IrrigatedAcres).toFixed(1)} ac<br>` : ''}
                    ${p.GrazingAcres ? `Grazing: ${parseFloat(p.GrazingAcres).toFixed(1)} ac<br>` : ''}
                    ${p.ForestAcres ? `Forest: ${parseFloat(p.ForestAcres).toFixed(1)} ac<br>` : ''}
                    ${p.ContinuousCropAcres ? `Crop: ${parseFloat(p.ContinuousCropAcres).toFixed(1)} ac<br>` : ''}
                    ${p.WildHayAcres ? `Wild Hay: ${parseFloat(p.WildHayAcres).toFixed(1)} ac<br>` : ''}
                </div>
            </div>` : ''}

            ${waterRights.length > 0 ? `
            <div style="margin-bottom: 12px; background: #f0f9ff; padding: 10px; border-radius: 6px; border: 1px solid #bae6fd;">
                <div style="font-size: 11px; color: #0369a1; text-transform: uppercase; font-weight: 600; margin-bottom: 4px;">üíß Water Rights (${waterRights.length})</div>
                <div style="font-size: 9px; color: #0284c7; margin-bottom: 6px; font-style: italic;">Includes both Points of Diversion (where water is taken) and Places of Use (where water is used)</div>
                <div style="max-height: 180px; overflow-y: auto;">
                    ${waterRights.map(wr => {
                        const attr = wr.attributes;
                        const sourceLabel = wr.source === 'POD' ? 'üìç Diversion' : wr.source === 'POU' ? 'üåæ Use' : 'üìçüåæ Both';
                        return `
                        <div style="font-size: 11px; padding: 6px 0; border-bottom: 1px solid #e0f2fe;">
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <div style="font-weight: 600; color: #0c4a6e;">${attr.WR_NUMBER || 'N/A'}</div>
                                <div style="font-size: 9px; background: #e0f2fe; padding: 2px 6px; border-radius: 3px; color: #0369a1;">${sourceLabel}</div>
                            </div>
                            ${attr.OWNERS ? `<div style="color: #555; margin-top: 2px;">Owner: ${attr.OWNERS.split(';')[0]}</div>` : ''}
                            ${attr.SOURCE_NAME ? `<div style="color: #555;">Source: ${attr.SOURCE_NAME}</div>` : ''}
                            ${attr.PURPOSES ? `<div style="color: #555;">Purpose: ${attr.PURPOSES}</div>` : ''}
                            ${attr.MAX_FLOW_CFS ? `<div style="color: #555;">Flow: ${attr.MAX_FLOW_CFS} CFS</div>` : ''}
                            ${attr.WR_STATUS ? `<div style="color: #555;">Status: ${attr.WR_STATUS}</div>` : ''}
                        </div>
                        `;
                    }).join('')}
                </div>
            </div>` : ''}

            ${oilWells.length > 0 ? `
            <div style="margin-bottom: 12px; background: #fef3c7; padding: 10px; border-radius: 6px; border: 1px solid #fbbf24;">
                <div style="font-size: 11px; color: #92400e; text-transform: uppercase; font-weight: 600; margin-bottom: 4px;">üõ¢Ô∏è Oil & Gas Wells (${oilWells.length})</div>
                <div id="wells-production-${p.PARCELID}" style="max-height: 200px; overflow-y: auto;">
                    ${oilWells.map((well, idx) => {
                        const attr = well.attributes;
                        const statusColor = attr.Status === 'Producing' ? '#15803d' : attr.Status === 'Shut In' ? '#b91c1c' : '#6b7280';
                        return `
                        <div style="font-size: 11px; padding: 8px; margin-bottom: 6px; background: white; border-radius: 4px; border: 1px solid #fde68a;">
                            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 4px;">
                                <div style="font-weight: 600; color: #78350f;">${attr.Well_Nm || 'Unnamed Well'}</div>
                                <div style="font-size: 9px; background: ${statusColor}; color: white; padding: 2px 6px; border-radius: 3px;">${attr.Status || 'Unknown'}</div>
                            </div>
                            ${attr.CoName ? `<div style="color: #92400e; font-size: 10px; margin-bottom: 2px;">Operator: ${attr.CoName}</div>` : ''}
                            ${attr.API_WellNo && attr.API_WellNo !== 0 ? `<div style="color: #78350f; font-size: 10px; margin-bottom: 2px;">API: ${attr.API_WellNo}</div>` : ''}
                            ${attr.Type ? `<div style="color: #78350f; font-size: 10px; margin-bottom: 4px;">Type: ${attr.Type}</div>` : ''}
                            <div id="well-prod-${attr.API_WellNo || idx}" style="background: #dcfce7; padding: 6px; border-radius: 3px; margin-top: 4px;">
                                <div style="font-size: 9px; color: #166534; text-align: center;">Loading production data...</div>
                            </div>
                        </div>
                        `;
                    }).join('')}
                </div>
            </div>` : ''}

            <div style="font-size: 10px; color: #999; margin-top: 12px; padding-top: 8px; border-top: 1px solid #e5e7eb;">
                ${p.CountyName ? `${p.CountyName} County, Montana ‚Ä¢ ` : ''}Source: MT Cadastral MSDI, DNRC & ArcGIS
            </div>
        </div>
    `;

    new maplibregl.Popup({ maxWidth: '420px' })
        .setLngLat(lngLat)
        .setHTML(html)
        .addTo(map);

    // Fetch production data for each well on this property
    if (oilWells.length > 0) {
        oilWells.forEach(async (well, idx) => {
            const attr = well.attributes;
            const apiNumber = attr.API_WellNo;

            if (apiNumber && apiNumber !== 0) {
                try {
                    const response = await fetch(`http://localhost:8001/api/well-production/${apiNumber}`);
                    if (response.ok) {
                        const prodData = await response.json();
                        const prodElement = document.getElementById(`well-prod-${apiNumber}`);

                        if (prodElement) {
                            prodElement.innerHTML = `
                                <div style="font-size: 10px; color: #166534; font-weight: 600; margin-bottom: 3px;">üìä Production Data</div>
                                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 6px;">
                                    <div>
                                        <div style="font-size: 9px; color: #166534;">Oil (BBL/day)</div>
                                        <div style="font-size: 13px; color: #15803d; font-weight: 700;">${prodData.barrels_per_day.toLocaleString()}</div>
                                    </div>
