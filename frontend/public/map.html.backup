    // Load flowlines (rivers, streams)
    const flowlineUrl = `https://gisservicemt.gov/arcgis/rest/services/MSDI_Framework/Hydrography/MapServer/3/query?` +
        `where=1%3D1&` +
        `geometry=${bbox}&` +
        `geometryType=esriGeometryEnvelope&` +
